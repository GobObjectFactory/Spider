<Window x:Class="Spider.Solitaire.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:Spider.Solitaire.ViewModel"
        Title="MainWindow" Height="350" Width="525">
    <Canvas Background="DarkGreen" Name="mainCanvas">
        <Canvas DataContext="{Binding Path=AceOfHearts}" Canvas.Left="12" Canvas.Top="12" Height="163" Name="canvas1" Width="134" MouseDown="canvas1_MouseDown" MouseMove="canvas1_MouseMove" MouseUp="canvas1_MouseUp">
            <Rectangle Height="160" Canvas.Left="0" Canvas.Top="0" Name="rectangle1" Stroke="Black" Width="130" RadiusX="15" RadiusY="15" Fill="White">
                <Rectangle.BitmapEffect>
                    <DropShadowBitmapEffect ShadowDepth="15" Direction="320" Opacity="0.5" />
                </Rectangle.BitmapEffect>
            </Rectangle>
            <TextBlock Height="19" Name="textBlock1" Text="{Binding Path=Face}" Width="26" Foreground="{Binding Path=Color}" Canvas.Left="6" Canvas.Top="6" />
            <TextBlock Height="19" Name="textBlock2" Text="{Binding Path=Suit}" Width="13" Foreground="{Binding Path=Color}" Canvas.Left="107" Canvas.Top="6" />
            <TextBlock Height="48" Name="textBlock3" Text="{Binding Path=Suit}" Foreground="{Binding Path=Color}" FontSize="40" Width="34" Canvas.Left="47" Canvas.Top="45" />
        </Canvas>
    </Canvas>
</Window>
